<h4>コメント一覧</h4>
<table>
  <tbody>
    <% post.post_comments.each do |post_comment| %>
    <tr>
      <td>
        <%= link_to admin_user_path(post_comment.user) do %>
          <%= image_tag post_comment.user.get_profile_image(50,50) %><br>
          <%= post_comment.user.name %>
        <% end %>
      </td>
      <td><%= post_comment.comment %></td>
      <td>
        <%= link_to "削除", admin_post_post_comment_path(post, post_comment), method: :delete, class: "btn btn-sm btn-danger float-end", remote: true, data: { confirm: '本当に削除しますか?' } %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>