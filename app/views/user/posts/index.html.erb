<div class='container px-2 px-sm-0'>
  <div class='row'>
    <div class='col-md-2'>
      <h2>ユーザ情報</h2>
      <%= render 'user/users/info', user: current_user %>
    </div>
    <div class='col-md-8'>
      <h2>煙一覧</h2>
      <%= link_to '新しい順', posts_path(latest: "true") %>
      |<%= link_to '古い順', posts_path(old: "true") %>
      |<%= link_to '評価の高い順', posts_path(star_count: "true") %>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th></th>
            <th>タイトル</th>
            <th>ジャンル</th>
            <th></th>
            <th></th>
            <th></th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |posts| %>
            <tr>
              <td><%= link_to(posts.user) do %>
                <%= image_tag posts.user.get_profile_image(30,30) %>
                <% end %>
              </td>
              <td><%= link_to posts.title,posts %></td>
              <td><%= posts.flavor_genre %></td>
              <td></td>
              <td id="favorite_btn_<%= posts.id %>" >
                <%= render "user/favorites/btn", post: posts %>
              </td>
              <td id="comment_counter">
                <%= render "user/post_comments/counter", post: posts %>
              </td>
              <td>
                <%= render "user/posts/static_rate", post: posts %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class='col-md-2'>
      <h2>ジャンルタグ検索</h2>

    </div>
  </div>
</div>