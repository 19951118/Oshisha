<% if users.exists? %>
  <table class='table'>
    <thead>
      <tr>
        <th></th>
        <th>ユーザネーム</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% users.each do |user| %>
        <tr>
          <td>
            <%= link_to user_path(user) do %>
              <%= image_tag user.get_profile_image(50,50) %>
            <% end %>
          </td>
          <td><%= user.name %></td>
          <td>
            <%= link_to user_followings_path(user) do %>
              <h6>フォロー<%= user.followings.count %></h6>
            <% end %>
          </td>
          <td>  
            <%= link_to user_followers_path(user) do %>
              <h6>フォロワー<%= user.followers.count %></h6>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class ="d-flex justify-content-center">
    <%= paginate users %>
  </div>
<% else %>
  <p>ユーザーはいません</p>
<% end %>