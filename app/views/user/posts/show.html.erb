<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>ユーザ情報</h2>
      <%= render 'user/users/info', user: @post.user %>
      <%= render 'user/relationships/follow_info', user: @post.user %>
    </div>
    <div class='col-md-9'>
      <h2>煙詳細</h2>
      <% if @post.user == current_user %>
        <%= link_to 'Edit', edit_post_path(@post), class: "btn btn-sm btn-success float-right" %>
        <%= link_to 'Destroy', @post, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger float-right"%>
      <% end %>
      <table class='table'>
        <tr>
          <td><%= link_to @post.title, @post %></td>
          <td><%= @post.player %></td>
          <td id="favorite_btn_<%= @post.id %>" >
            <%= render "user/favorites/btn", post: @post %>
          </td>
          <td id="comment_counter">
            <%= render "user/post_comments/counter", post: @post %>
          </td>
          <td>
            <%= render "static_rate", post: @post %>
          </td>
        </tr>
        <tr>
          <td colspan="5"><%= @post.body %></td>
        </tr>
        <tr>
          <td>金額<%= @post.price %></td>
          <td>ボトルオプション<%= @post.bottle_option %></td>
          <td>ニコチン<%= @post.nicotine %></td>
          <td>吸いごたえ<%= @post.smoking_level %></td>
          <td>味の濃さ<%= @post.smoking_taste_level %></td>
        </tr>
        <tr>
          <td><%= @post.hms_genre %></td>
          <td><%= @post.top_genre %></td>
          <td><%= @post.location %></td>
          <td><%= @post.duration %></td>
          <td><%= @post.flavor_capacity %></td>
          <td><%= @post.flavor_genre %></td>
        </tr>
      </table>
      <div id="comment_index">
        <%= render "user/post_comments/index", post: @post %>
      </div>
      <div id="comment_form">
        <%= render "user/post_comments/form", post: @post, post_comment: @post_comment %>
      </div>
    </div>
  </div>
</div>