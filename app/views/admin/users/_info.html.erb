<table class='table'>
  <tr>
    <th>
      <%= link_to admin_user_path(user) do %>
        <%= image_tag user.get_profile_image(100,100) %>
      <% end %>
    </th>
    <th><%= user.shisha_resistance_i18n %></th>
  </tr>
  <tr>
	  <th>ユーザネーム</th>
	  <th><%= link_to user.name, admin_user_path(user) %></th>
  </tr>
  <tr>
	  <th colspan="2"class="text-center">プロフィール</th>
  </tr>
  <tr>
    <td colspan="2"><%= user.profile %></td>
  </tr>
</table>
<div>
    <%= link_to edit_admin_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
      <i class="fas fa-user-cog"></i>
    <% end %>
</div>