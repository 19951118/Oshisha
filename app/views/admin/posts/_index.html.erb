
<% if posts.exists? %>
 全件-<%= link_to '新しい順', admin_posts_path(latest: "true") %>
|<%= link_to '古い順', admin_posts_path(old: "true") %>
|<%= link_to '評価の高い順', admin_posts_path(star_count: "true") %>
<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>タイトル</th>
      <th>ジャンル</th>
      <th>製作</th>
      <th></th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% posts.each do |post| %>
      <tr>
        <td>
          <%= link_to admin_user_path(post.user) do %>
            <%= image_tag post.user.get_profile_image(50,50) %>
          <% end %>
        </td>
        <td><%= link_to post.title,admin_post_path(post) %></td>
        <td><%= post.flavor_genre_i18n %></td>
        <td><%= post.player_i18n %></td>
        <td>
          ♥<%= post.favorites.count %>
        </td>
        <td>
          <i class="fa-solid fa-comment"></i><%= post.post_comments.count %>
        </td>
        <td>
          <%= render "user/posts/static_rate", post: post %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class ="d-flex justify-content-center">
  <%= paginate posts %>
</div>
<% else %>
  <h4 class ="mt-5 text-center">煙がみつかりません</h4>
<% end %>