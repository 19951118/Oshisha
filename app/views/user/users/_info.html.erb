<table class='table'>
  <tr>
    <th>
      <%= link_to user_path(user) do %>
        <%= image_tag user.get_profile_image(100,100) %>
      <% end %>
    </th>
    <th><%= user.shisha_resistance_i18n %></th>
  </tr>
  <tr>
	  <th>ユーザネーム</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th colspan="2"class="text-center">プロフィール</th>
  </tr>
  <tr>
    <td colspan="2"><%= user.profile %></td>
  </tr>
</table>
<div class='row'>
  <% if user == current_user %>
    <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
      <i class="fas fa-user-cog"></i>
    <% end %>
  <% else %>
    <%= render "user/relationships/follow_btn", user: user %>
  <% end %>
</div>