<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>ユーザ情報</h2>
      <%= render 'user/users/info', user: @post.user %>
      <%= render 'user/relationships/follow_info', user: @post.user %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to(@post.user) do %>
            <%= image_tag @post.user.get_profile_image(100,100) %><br>
            <%= @post.user.name %>
            <% end %>
          </td>
          <td><%= link_to @post.title, @post %></td>
          <td><%= @post.body %></td>
          <td></td>
          <td id="favorite_btn_<%= @post.id %>" >
            <%= render "user/favorites/btn", post: @post %>
          </td>
          <td id="comment_counter">
            <%= render "user/post_comments/counter", post: @post %>
          </td>
          <td>
            <%= render "static_rate", post: @post %>
          </td>
          <% if @post.user == current_user %>
          <td><%= link_to 'Edit', edit_post_path(@post), class: "btn btn-sm btn-success" %></td>
          <td><%= link_to 'Destroy', @post, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
          <% end %>
        </tr>
      </table>
      <div id="comment_index">
        <%= render "user/post_comments/index", post: @post %>
      </div>
      <%= render "user/post_comments/form", post: @post, post_comment: @post_comment %>
    </div>
  </div>
</div>